<div class="section no-pad-bot" id="index-banner">
  <div class="container">

      <div class="the_crumbs">
        <div class="col s12">
          <a href="/" class="breadcrumb">Home</a>
          <i class="fa fa-chevron-right" aria-hidden="true"></i>
          <a href="/category" class="breadcrumb">Category</a>
        </div>
      </div>


      <div id="category-flashcards">

        <div class="divider"></div>
        {{#each cats}}
            {{#if this.cat_name}}
                <h5>{{ this.cat_name }} - Sets</h5>
            {{/if}}
        {{/each}}


        <div class="row">
        <!-- allCategories.cats[0].Sets[0].title -->


        {{#each cats}}
          {{#if this.cat_name}}
            {{#each this.Sets}}

              <div class="section col s12 m4">
                <div href="#play-flashcards" class="modal-trigger card-panel teal"
                    <span class="white-text" id="{{this.cat_name}}" value="{{this.cat_name}}" >{{ this.cat_name }}HELLO</span>
                    <span class="white-text"><p>Created by <a href="#">(User Name)</a></p></span>
                </div>
              </div>

              {{/each}}
            {{/if}}
          {{/each}}


        </div>
      </div> <!-- end category Flashcards -->

  </div>
</div>

<!-- Modal Flashcard Deck Structure -->
<div id="play-flashcards" class="modal">
  <div class="modal-content">

    <h5>Flashcard Title</h5>
    <p>Author</p>

    <div class="row modal-row content-card">
      <!-- front / back / both sides of card appear here -->
    </div>

    <div class="row modal-row controls-card">
      <div class="col s4 previous"><a href="#" value="previous-card" class="btn">PREVIOUS</a></div>
      <div class="col s4 flip"><a href="#" value="flip-card" class="btn">FLIP</a></div>
      <div class="col s4 next"><a href="#" value="next-card" class="btn">NEXT</a></div>
    </div>

    <div class="row modal-row share-card">
      <button class="col s12 btn" type="submit" value="share-card" name="share-card">Share Flashcards</button>
      <!-- <a href="#" value="share-card" class="waves-effect waves-light btn">Share Flashcards!</a> -->
    </div>

  </div> <!-- end modal content -->
</div> <!-- end play-flashcards modal -->


